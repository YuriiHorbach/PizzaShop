<div class="container">
	<div class="row">
		<% @product.each do |product|%>
			<div class="col-lg-4">
				<div class="product">
						<%= product.title%>
						<p>
							<img src="<%= product.path_to_image%>" alt="">
						</p>
						<p>
							Description: <%= product.description%>
						</p>
						<p>
							Price: <%= product.price%>
						</p>
						<p>
							Size: <%= product.size%>
						</p>
						<p>
							Spicy: <%= product.is_spicy%>
						</p>

				</div>
				<br>
				<br>
			</div>
			<hr>
		<% end %>
	</div>
</div>