<h2>Welcome to PizzaShop</h2>

<button class="btn btn-primary btn-large" >Click me</button>

<div class="container">
	<div class="row">
		<% @product.each do |product|%>
			<div class="col-lg-4">
				<div class="product">
						<%= product.title%>
						<p>
							<img src="<%= product.path_to_image%>" alt="">
						</p>
						<p>
							Description: <%= product.description%>
						</p>
						<p>
							Size: <%= product.size%> cm
						</p>
						<p>
							Price: <%= product.price%> uah
						</p>
				</div>
				<button type="button" onclick="add_to_cart(<%= product.id%>);" class="btn btn-success btn-sm">Add to cart</button>
				<br>
				<br>
			</div>
			<hr>
		<% end %>
	</div>
</div>

<script >
	$(function(){

		update_orders_input();

	});
</script>